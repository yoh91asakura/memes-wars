# Server Configuration
NODE_ENV=development
PORT=8000
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/memewars_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=memewars_db
DATABASE_USER=memewars_user
DATABASE_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_at_least_32_chars
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Security
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
API_CORS_ORIGIN=http://localhost:3000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# External Services
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=

# Game Configuration
CARDS_PER_ROLL=3
PITY_TIMER_THRESHOLD=50
MAX_DECK_SIZE=30
