# Cross-platform configuration
audit=false
fund=false
save-exact=true

# Engine strict mode
engine-strict=true

# Progress bar
progress=true

# Cache settings
cache-max=500

# Registry settings
registry=https://registry.npmjs.org/

# Script shell configuration
# Windows will use cmd by default, Unix will use sh
script-shell=

# Node options for cross-platform
node-options=--max-old-space-size=4096

# Logging
loglevel=warn

# Security
audit-level=moderate

# Installation
prefer-offline=false
package-lock=true

# Cross-platform path handling
# This ensures consistent behavior across Windows and Unix-like systems
legacy-peer-deps=false

# Performance optimizations
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000