{
  "name": "emoji-mayhem-tcg",
  "version": "0.1.0",
  "description": "A trading card game with emoji bullet hell combat",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "setup": "node -e \"process.platform === 'win32' ? require('child_process').spawn('powershell', ['scripts/setup-windows.ps1'], {stdio: 'inherit'}) : require('child_process').spawn('bash', ['scripts/setup-mac.sh'], {stdio: 'inherit'})\"",
    "setup:windows": "powershell -ExecutionPolicy Bypass -File scripts/setup-windows.ps1",
    "setup:mac": "bash scripts/setup-mac.sh",
    "archon:status": "cross-env-shell \"powershell scripts/sync-archon-tasks.ps1 -Action status || bash scripts/archon-status.sh\"",
    "archon:sync": "cross-env-shell \"powershell scripts/sync-archon-tasks.ps1 -Action sync || bash scripts/archon-sync.sh\"",
    "sparc:spec": "npx claude-flow sparc run spec-pseudocode",
    "sparc:architect": "npx claude-flow sparc run architect",
    "sparc:tdd": "npx claude-flow sparc tdd",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium --workers=4",
    "test:e2e:quick": "playwright test --project=chromium --grep-invert=@slow",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:watch": "playwright test --ui --headed",
    "clean": "cross-env-shell \"rmdir /s /q dist node_modules/.cache || rm -rf dist node_modules/.cache\"",
    "clean:install": "npm run clean && npm install",
    "postinstall": "cross-env-shell \"echo 'Setup complete! Run npm run dev to start development' || echo 'Setup complete! Run npm run dev to start development'\"",
    "predev": "npm run typecheck",
    "prebuild": "npm run validate"
  },
  "keywords": [
    "tcg",
    "game",
    "emoji",
    "meme",
    "bullet-hell"
  ],
  "author": "Emoji Mayhem Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "framer-motion": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.0",
    "uuid": "^9.0.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "cross-env": "10.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.4",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.1.0",
    "vitest": "^1.3.0"
  }
}
