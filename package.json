{
  "name": "card-game-app",
  "version": "0.1.0",
  "description": "A modern card collection and battle game",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "dev:fast": "vite",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "validate": "npm run typecheck",
    "test:e2e": "playwright test",
    "test:e2e:fast": "playwright test --project=chromium --workers=4",
    "test:e2e:quick": "playwright test --project=chromium --grep-invert=@slow",
    "test:e2e:single": "playwright test --project=chromium --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:watch": "playwright test --ui --headed",
    "clean": "cross-env-shell \"rmdir /s /q dist node_modules/.cache || rm -rf dist node_modules/.cache\"",
    "clean:install": "npm run clean && npm install",
    "postinstall": "cross-env-shell \"echo 'Setup complete! Run npm run dev to start development' || echo 'Setup complete! Run npm run dev to start development'\"",
    "predev": "echo 'Skipping typecheck for Collection module test'",
    "prebuild": "npm run typecheck"
  },
  "keywords": [
    "card-game",
    "game",
    "collection",
    "battle"
  ],
  "author": "Development Team",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@tanstack/react-query": "5.85.3",
    "@tanstack/react-query-devtools": "5.85.3",
    "axios": "1.11.0",
    "framer-motion": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "4.8.1",
    "styled-components": "6.1.19",
    "uuid": "^9.0.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.3.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "5.1.34",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.3.0",
    "cross-env": "10.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "glob": "11.0.3",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "playwright": "1.54.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.39.1",
    "vite": "^5.1.0",
    "vitest": "^1.3.0"
  }
}
