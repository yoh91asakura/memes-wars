# Environment Configuration Template
# Copy this file to .env.local and modify as needed

# Application Environment
NODE_ENV=development

# Development Server
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost

# Game Configuration
VITE_GAME_TITLE="Emoji Mayhem TCG"
VITE_GAME_VERSION="0.1.0"
VITE_GAME_DEBUG=true

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=5000

# WebSocket Configuration (if using multiplayer)
VITE_WS_URL=ws://localhost:3001
VITE_WS_RECONNECT_ATTEMPTS=5

# Archon Services (local development)
VITE_ARCHON_UI_URL=http://localhost:3737
VITE_ARCHON_API_URL=http://localhost:8181
VITE_ARCHON_MCP_URL=http://localhost:8051

# Claude Flow Configuration
VITE_CLAUDE_FLOW_ENABLED=false
VITE_CLAUDE_FLOW_DEBUG=false

# Analytics and Monitoring (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=""

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_THRESHOLD=1000

# Feature Flags
VITE_FEATURE_MULTIPLAYER=false
VITE_FEATURE_TUTORIAL=true
VITE_FEATURE_ACHIEVEMENTS=false
VITE_FEATURE_LEADERBOARD=false

# Testing
VITE_TEST_MODE=false
VITE_TEST_SEED=12345

# Security
VITE_SECURITY_CSP_ENABLED=true
VITE_SECURITY_HTTPS_ONLY=false

# Storage
VITE_STORAGE_TYPE=localStorage
VITE_STORAGE_PREFIX=emoji_mayhem_

# Logging
VITE_LOG_LEVEL=info
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=false

# Development Tools
VITE_DEVTOOLS_ENABLED=true
VITE_DEVTOOLS_REACT=true
VITE_DEVTOOLS_REDUX=false

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_TARGET=es2020

# Cross-platform paths (use forward slashes)
VITE_ASSETS_PATH=/src/assets
VITE_COMPONENTS_PATH=/src/components
VITE_SERVICES_PATH=/src/services

# Windows-specific (optional)
# VITE_WINDOWS_DEV_MODE=true

# macOS-specific (optional)
# VITE_MACOS_DEV_MODE=true