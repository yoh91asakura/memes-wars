# EditorConfig helps maintain consistent coding styles across different editors and platforms
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,html,vue}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

# Windows scripts
[*.{bat,cmd,ps1}]
end_of_line = crlf

# Unix scripts
[*.{sh,bash,zsh}]
end_of_line = lf

# Python files
[*.py]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2
insert_final_newline = true
